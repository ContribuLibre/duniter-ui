  //  width 350px

#serveractions
  width 170px !important

  button
    height: 50px
    width: 100%;
    padding-right: 0px;
    padding-left: 5px;
    //line-height 1.5rem

  i, span
    line-height: 50px
    height: 50px

#server_state
  .card-title
    height 53px
  i
    font-size 4.5rem

.card-content
  width 100%

.tabs
  overflow hidden

  .indicator
    background-color #82B6C1

  .tab a
    color #1A687F
  .tab a:hover
    color #82B6C1

.pubkey
  background-color #d7edf5
  line-height 60px

blockquote
  padding-top 10px
  padding-bottom 10px

.tabs .tab.disabled a
  color #9EA8AC