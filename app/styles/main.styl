@import 'vendor'
@import 'menu'

html
  background-color: white

body, main
  height: 100%
  width: 100%
  position: absolute
  
head, main
  background-color: white !important
  transitionb: opacity 0.3s ease-in-out
  transform: translateZ(0)

main
  overflow: visible

nav
  background-color #1A687F

.modal .modal-footer .btn
  margin-right 5px

.small
  font-size 0.8rem

.home

  .card.graph
    height inherit

  .card
    text-align center
    height 166px

    .fa
      z-index 1
      width: 100%
      margin-left: auto
      margin-right: auto
      position: absolute
      margin-top -5px
      margin-left -50%
      color: rgba(187, 234, 249, 0.51)

  .card-title span
    z-index 2
    position: relative
    //font-weight bold
    font-size 3rem
    width 350px

  .card-title p
    z-index 2
    position: relative
    font-size 1.4rem
    line-height 27px

  .card-action
    padding 1px

  .card-time

    .card-content
      padding-top 15px
      padding-bottom 15px

      .card-title p:first-child
        margin-bottom 9px

  //.card-time .card-title span, .card-time .card-title  p
